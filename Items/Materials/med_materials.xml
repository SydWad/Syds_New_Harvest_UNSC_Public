		</StatusEffect>
		
		<StatusEffect type="OnFailure" target="This,AllLimbs" Condition="-1" delay="0.01" disabledeltatime="true" >
			<ReduceAffliction type="burn" amount="8" />
			<ReduceAffliction type="internaldamage" amount="3" />
		</StatusEffect>
		
		<StatusEffect type="OnUse" target="This" duration="0.35" disabledeltatime="True" allowwhenbroken="True" comparison="and" >
			<Conditional condition="gt 0" />
			<Sound file="Content/Items/Tools/Sprayer.ogg" range="500" volume="0.2" loop="true" />
